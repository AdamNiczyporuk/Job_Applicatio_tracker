datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int    @id @default(autoincrement())
  mail        String @unique
  password    String
  githublink  String
  linkedinlink String
  applications Application[]
}

model Application {
  id       Int    @id @default(autoincrement())
  user_id  Int
  name     String
  link     String
  user     User   @relation(fields: [user_id], references: [id])
}
